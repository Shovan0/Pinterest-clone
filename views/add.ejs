<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen px-10 py-5 bg-zinc-800 text-white">
        <h1 class="text-xl">Create new post</h1>
        <hr class="opacity-20 mt-5">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class="block w-1/3 px-3 py-3 mt-3 rounded-md  bg-slate-400" name="postimage" type="file">
            <label for="">Title</label>
            <input class="block w-1/3 px-3 py-3 mt-3 text-black bg-slate-400 outline-none rounded-md" name="title" type="text" placeholder="Title">
            <label for="">Description</label>
            <textarea class="block w-1/3 px-3 py-3 mt-3 h-60 text-black bg-slate-400 outline-none rounded-md" name="description" type="text" placeholder="Description"></textarea>
            <input class="block w-1/3 px-3 py-3 mt-3 bg-red-700 rounded-md" type="submit" value="Create Post">
        </form>
    </div>

