<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
  <div class="w-[35vw] h-[75vh] bg-white px-20 py-10 rounded-[30px]">
      <h1 class="text-4xl tracking-tight text-center font-semibold text-zinc-700 leading-none">Create new account</h1>
      <form action="/register" method="post">
        <label for="">Username</label>
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2 " type="text" name="username" placeholder="Enter Username">
        <label for="">Password</label>
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2 " type="password" name="password" placeholder="Password">
        <label for="">Email</label>
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2 " type="email" name="email" placeholder="email">
        <label for="">Contact</label>
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2 " type="number" name="contact" placeholder="number">
        <input class="border-2 block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create new account">
        <a href="/" class="forgot inline-block mt-2 font-semibold">Already in Pinterest ? Login.</a>
      </form>
  </div>
</div>


<% include ./partials/footer.ejs %>