<% include ./partials/header.ejs %>

<div class="profile w-full min-h-screen bg-zinc-800 text-white">
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
    <div class="profdets flex flex-col items-center pt-20">
        <div class="relative">
            <span id="uploadicon" class="w-10 h-10 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
                <i class="text-zinc-800 ri-pencil-line"></i>
            </span>
            <div class="w-32 h-32 bg-zinc-300 rounded-full overflow-hidden">
                <img class="h-full w-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">        
            </div>
        </div>
        <h1 class="text-2xl font-semibold mt-2"><%= user.username %></h1>
        <h3 class="xl ">@<%= user.username %></h3>
        <a href="/edit" class="mt-5 px-7 py-2 bg-zinc-700 rounded-full text-sm font-semibold">Edit</a>
        <a href="/add" class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-10">Add New Post</a>
    </div>
    <div class="cards flex flex-wrap gap-10 px-10 mt-10">
        <div class="cards flex flex-wrap gap-10">
        <% user.posts.forEach(function(element)  {  %>
            <div class="card w-32 overflow-hidden">
                <div class="w-full h-40 bg-sky-200 rounded-lg">
                    <img src="./images/uploads/<%= element.image %>" alt="">
                </div>
            <h5 class="mt-2"><%= element.title %></h5>
            </div>
        <% }) %> %>
        </div>
    </div>
</div>

<script>
    document.querySelector("#uploadicon").addEventListener("click", function()  {
        document.querySelector("#uploadform input").click();
    })
    document.querySelector("#uploadform input").addEventListener("change", function(){
        document.querySelector("#uploadform").submit();
    })
</script>
<% include ./partials/footer.ejs %>